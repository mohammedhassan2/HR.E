@rendermode InteractiveServer
@page "/Countract"

<div class="Add-B add-all" id="Add">
    <div class="text-add text-item">
        <h2> اضافة عقد جديد</h2>
        <a @onclick="()=> colaped()">X</a>
    </div>
    <AddContract></AddContract>
</div>
<div class="page">
    <dev class="header-bra">
        <a class="btn-add" @onclick="()=> colaped()">
            @TesxtBTNadd
            </a>
        <div class="search">
            <input class="search-inp" type="search" value="" />
                <a href="#"><i>&</i></a>
                <a href="#"><i>&</i></a>
            </div>
    </dev>
    <div class=" my-table">
        <TableHeader item="itemHeadTable"></TableHeader>
        @for (int i = 0; i < 3; i++)
        {
            <div class="my-table-div b-row row">
                <TableBody items="@itemBodeTableDemo"></TableBody>
            </div>
        }
    </div>
</div>

@if (IsVisibaled)
{
    TesxtBTNadd = "+ اضافة عقد جديد";
    <style>
        .Add-B{
            display:flex;
            justify-items:center;
            align-items:center;
            flex-direction:column;
        }

        .btn-add {
            position: fixed;
            margin: 20px;
            bottom: 0;
            z-index: 10;
        }
        .search a, .search .search-inp {
            display:none;
        }

    </style>
}
else
{
    TesxtBTNadd = "+ اضافة";
    <style>
        .Add-B {
            display: none;
        }
    </style>
}
@code{
    private List<string> itemHeadTable = new List<string>
    {
        "اسم العقد",
        "اسم الموظف",
        "تاريخ بداية العقد",
        "تاريخ نهاية العقد",
        "اسم الوظيفة",
        "تاريخ الانشاء",
        "اجراء"
    };
    private List<string> itemBodeTableDemo = new List<string>
    {
        "العقد 1",
        "اصيل حسان",
        "2022/12/1",
        "2022/12/1",
        "2022/12/1",
        "2022/12/1",
    };
    private bool IsVisibaled;
    private void colaped()
    {
        IsVisibaled = !IsVisibaled;
        js.InvokeVoidAsync("toggleSidebar");
    }
    private string TesxtBTNadd = "+ اضافة عقد جديد";

}