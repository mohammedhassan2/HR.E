@rendermode InteractiveServer
@page "/Trainees"

<div class="Add-B add-all" id="Add">
    <div class="text-add text-item">
        <h2> اضافة متدرب جديد</h2>
        <a @onclick="()=> colaped()">X</a>
    </div>
    <AddTrainees></AddTrainees>
</div>
<div class="page my-page">
    <dev class="header-bra">
        <a class="btn-add" @onclick="()=>colaped()">
            @TesxtBTNadd
        </a>
        <div class="search">
            <input class="search-inp" type="search" value="" />
            <a href="#"><i>&</i></a>
            <a href="#"><i>&</i></a>
        </div>
    </dev>
    <div class=" my-table">
        <TableHeader item="@itemHeadTable"></TableHeader>
        @for (int i = 0; i < 5; i++)
        {
            <div class="my-table-div b-row row">
                <TableBody items="@itemBodeTableDemo"></TableBody>
            </div>
        }
    </div>
</div>


@if (IsVisibaled)
{
    TesxtBTNadd = "+ اضافة متدرب جديد";
    <style>
        .Add-B {
            display: flex;
            justify-items: center;
            align-items: center;
            flex-direction: column;
        }

        .search a, .search .search-inp {
            display: none;
        }

    </style>
}

else
{
    TesxtBTNadd = "+ اضافة";
    <style>
        .Add-B {
            display: none;
        }
    </style>
}

